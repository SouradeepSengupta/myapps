<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="vehicles.vehicles_list">
      <field name="name">Vehicles list</field>
      <field name="model">vehicles.vehicles</field>
      <field name="arch" type="xml">
        <tree string="Vehicles">
          <field name="name"/>
          <field name="company"/>
          <field name="registration_number"/>
          <field name="need_servicing"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="vehicles.vehicles">
      <field name="name">Vehicles</field>
      <field name="res_model">vehicles.vehicles</field>
      <field name="view_mode">tree,form</field>
    </record>

